{
    "linters": {
        "clang-format": {
            "type": "clang-format",
            "include": [
                "([.]c$)",
                "([.]cpp$)",
                "([.]h$)",
                "([.]hpp$)",
                "([.]proto$)"
            ]
        },
        "pylint": {
            "type": "pylint",
            "include": "(\\.py$)",
            "pylint.config": ".pylintrc"
        },
        "text": {
          "type": "text",
        "include": [
            "([.]cpp$)",
            "([.]hpp$)"
            ]
        }
    }
}
